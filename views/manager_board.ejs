<%- include('common/view_start', {
  title: 'Manager Board',
  cssFiles: ['manager-board'],
  navBarLocation: 'manager-board'
}) %>

<%- include('common/header', {
  heading: 'Manager Board',
  subheading: 'บอร์ดสำหรับผู้บริหาร',
  breadcrumb: [
    'Manager Board'
  ]
}) %>

<!-- Overall Stat -->
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-12">
      <div style="position: absolute; left: 165px; margin-top: - 190px ">
        <h3><%= user.display_name %></h3>
        <p style="font-size: 120%">คณะวิศวกรรมศาสตร์ สาขาวิศวกรรมคอมพิวเตอร์</p>

      </div>
      <img src="/static/img/manager.png" style=" height: 120px; margin-top: -3px">
    </div>
  </div>

  <hr>

  <div class="row">
    <div class="col-xs-12">
      <div class="col-md-4 col-sm-12 col-xs-12 header-box">
        <h2>Overall</h2>
        <h2>Statistics</h2>
      </div>
      <div class="col-md-2 col-sm-12 col-xs-12 col-height">
        <div class="panel panel-primary text-center no-boder bg-color-blue">
          <div class="panel-body">
            <i class="fa fa-users fa-3x"></i>
            <h3 class="h3-reduced-margin" id="count">4,125</h3>
          </div>
          <div class="panel-footer back-footer-blue">
            จำนวนนิสิต
          </div>
        </div>
      </div>
      <div class="col-md-2 col-sm-12 col-xs-12">
        <div class="panel panel-primary text-center no-boder bg-color-red">
          <div class="panel-body">
            <i class="fa fa-exclamation fa-3x"></i>
            <h3 class="h3-reduced-margin" id="left">168 </h3>
          </div>
          <div class="panel-footer back-footer-red">
            จำนวนนิสิตตกค้าง
          </div>
        </div>
      </div>
      <div class="col-md-2 col-sm-12 col-xs-12">
        <div class="panel panel-primary text-center no-boder bg-color-green">
          <div class="panel-body">
            <i class="fa fa fa-bar-chart-o fa-3x"></i>
            <h3 class="h3-reduced-margin" id="grade">2.85 </h3>
          </div>
          <div class="panel-footer back-footer-green">
            เกรดเฉลี่ย
          </div>
        </div>
      </div>
      <div class="col-md-2 col-sm-12 col-xs-12">
        <div class="panel panel-primary text-center no-boder bg-color-brown">
          <div class="panel-body">
            <i class="fa fa-trophy fa-3x"></i>
            <h3 class="h3-reduced-margin" id="award">2,213 </h3>
          </div>
          <div class="panel-footer back-footer-brown">
            จำนวนรางวัล
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr>
  <!-- <div class="col-md-2 col-sm-12 col-xs-12"> </div> -->
<!-- Graph -->
  <div class="row">
    <div class="col-xs-12 col-md-7">
      <h3>เกรดของนิสิตแต่ละชั้นปี</h3>
      <canvas id="myChart" height="250"></canvas>
    </div>
    <div class="col-xs-12 col-md-5">
